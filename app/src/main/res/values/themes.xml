<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.FodAmy" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/white</item>
        <item name="colorAccent">@color/black</item>

        <item name="android:ambientShadowAlpha">0</item>
        <item name="android:spotShadowAlpha">0.12</item>



        <item name="android:windowFullscreen">true</item>
    </style>
        <!-- Customize your theme here. -->
    <style name="AnimationsForDialog">
        <item name="android:windowEnterAnimation">@anim/zoom_in_dialog</item>
        <item name="android:windowExitAnimation">@anim/zoom_out_dialog</item>
    </style>
    <style name="BottomDialogAnimation">
        <item name ="android:windowEnterAnimation">@anim/slide_in_bottom</item>
        <item name ="android:windowExitAnimation">@anim/slide_out_bottom</item>
    </style>
    <style name="BottomDialogStyle" parent="Base.Theme.AppCompat.Dialog">
        <item name="android:windowMinWidthMajor">100%</item>
        <item name="android:windowMinWidthMinor">97%</item>
    </style>
</resources>