<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <data>
        <import type="com.mobillium.fodamy.data.responses.editorchoices.Data"/>
        <variable
            name="data"
            type="Data" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/cl_item_editor_choices"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/secondaryBackground">


        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/cl_user_info"
            android:background="@color/white"
            android:layout_width="match_parent"
            android:layout_height="@dimen/margin_70dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">


            <ImageView
                android:id="@+id/image_view_user_photo"
                android:layout_width="@dimen/margin_40dp"
                android:layout_height="@dimen/margin_40dp"
                android:layout_marginStart="@dimen/margin_15dp"
                app:loadcircle="@{data.user.image.url}"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:srcCompat="@drawable/introimagefourth" />

            <TextView
                android:id="@+id/text_view_username"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:fontFamily="@font/nunito_sans_bold"
                android:letterSpacing="0.025"
                tools:text="username"
                android:text="@{data.user.username}"
                android:textColor="@color/cinder"
                android:textSize="@dimen/text_size_13sp"
                android:layout_marginStart="@dimen/margin_10dp"
                app:layout_constraintStart_toEndOf="@+id/image_view_user_photo"
                app:layout_constraintTop_toTopOf="@+id/image_view_user_photo" />

            <TextView
                android:id="@+id/text_view_user_info"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:letterSpacing="0.025"
                tools:text="3 Tarif 0 Takipçi"
                android:textColor="@color/raven"
                android:text='@{data.user.recipeCount + " " + @string/recipe_str + " " + data.user.followingCount + " " + @string/follower_str}'
                android:textSize="@dimen/text_size_13sp"
                android:fontFamily="@font/nunito_sans_semibold"
                app:layout_constraintStart_toStartOf="@+id/text_view_username"
                app:layout_constraintTop_toBottomOf="@+id/text_view_username" />
        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/cl_recipe_info"
            android:layout_width="match_parent"
            android:layout_marginTop="1dp"
            android:layout_height="wrap_content"
            android:background="@color/white"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/cl_user_info">

            <TextView
                android:id="@+id/text_view_recipe_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/margin_15dp"
                android:layout_marginTop="@dimen/margin_10dp"
                android:fontFamily="@font/nunito_sans_bold"
                android:textColor="@color/cinder"
                android:textSize="@dimen/text_size_15sp"
                android:text="@{data.title}"
                android:letterSpacing="0.025"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:text="Makarna Tarifi" />
            <TextView
                android:id="@+id/text_view_recipe_category"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/margin_15dp"
                android:fontFamily="@font/nunito_sans_semibold"
                android:letterSpacing="0.025"
                android:text="@{data.category.name}"
                android:textColor="@color/raven"
                android:textSize="@dimen/text_size_15sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/text_view_recipe_title"
                tools:text="Hamur İşi" />

            <androidx.cardview.widget.CardView
                android:id="@+id/card_view_recipe_image"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginEnd="@dimen/margin_15dp"
                app:cardElevation="0dp"
                android:layout_marginTop="@dimen/margin_10dp"
                app:cardCornerRadius="@dimen/radius_4dp"
                app:layout_constraintStart_toStartOf="@+id/text_view_recipe_category"
                app:layout_constraintTop_toBottomOf="@id/text_view_recipe_category" >

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:background="@color/white"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:id="@+id/image_view_recipe"
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                        app:layout_constraintEnd_toEndOf="parent"
                        android:scaleType="centerCrop"
                        app:load="@{data.images.get(0).url}"
                        app:layout_constraintDimensionRatio="H, 1:1"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        tools:srcCompat="@drawable/introimagefirst" />

                    <androidx.cardview.widget.CardView
                        android:id="@+id/card_view_editor_badge"
                        android:layout_width="@dimen/margin_40dp"
                        android:layout_height="@dimen/margin_40dp"
                        app:visibility="@{data._editor_choice}"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:cardCornerRadius="@dimen/margin_70dp"
                        app:layout_constraintTop_toTopOf="parent"
                        android:layout_marginEnd="@dimen/margin_15dp"
                        android:layout_marginTop="@dimen/margin_15dp">

                        <ImageView
                            android:id="@+id/imageView4"
                            android:layout_gravity="center"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            app:srcCompat="@drawable/icon_editor_badge" />
                    </androidx.cardview.widget.CardView>
                </androidx.constraintlayout.widget.ConstraintLayout>
            </androidx.cardview.widget.CardView>

            <TextView
                android:id="@+id/text_view_recipe_info"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/margin_15dp"
                android:layout_marginTop="@dimen/margin_10dp"
                android:fontFamily="@font/nunito_sans_semibold"
                android:letterSpacing="0.025"
                android:textColor="@color/raven"
                android:textSize="@dimen/text_size_13sp"
                android:text='@{data.comment_count + " " + @string/comment_str + " " + data.like_count + " " +@string/like_str}'
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginBottom="@dimen/margin_10dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/card_view_recipe_image"
                tools:text="0 Yorum 0 Beğeni" />

        </androidx.constraintlayout.widget.ConstraintLayout>


    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>