<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name="viewModel"
            type="com.mobillium.fodamy.ui.main.homepage.HomepageViewModel" />
        <variable
            name="preferencesManager"
            type="com.mobillium.fodamy.data.preferences.PreferencesManager" />
        <import type="android.text.TextUtils"/>
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        tools:context=".ui.main.homepage.HomepageFragment">


        <TextView
            android:id="@+id/text_view_homepage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@={viewModel.token}"
            tools:text="token"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/button_auth"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@{TextUtils.isEmpty(viewModel.token) ? @string/login_title : @string/logout}"
            app:layout_constraintEnd_toEndOf="parent"
            android:onClick="@{() -> viewModel.logout()}"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/text_view_homepage" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>